
<Button>:   # This is like a template/class for all Buttons below
    background_normal: ''
    background_color: (.2,.2,.2,.7)
    halign: 'center'


<FloatLayout>:

FloatLayout:

    Button: # Temp Button to Load a Question
        id: temp
        text: "Start"
        on_release: app.LoadQue()
        size_hint: .8,.1
        pos_hint: {'center_x': .5, 'top': 1}

    GridLayout:
        cols: 3
        rows: 2
        size_hint: .8, .1
        pos_hint: {'center_x': .5, 'top': .9}

        Label:
            text: 'SCORE'
        Label:
        Label:
            text: 'ROUND'
        Label:
            id: score
        Label:
        Label:
            id: remain


    Label: # The Question
        id: que
        halign: 'center'
        text: 'Welcome to the Customizable Trivia Game\nPress The Start Button to Begin'
        text_size: self.width, None
        size_hint: .8,.1
        pos_hint: {'center_x': .5, 'top': .7}

    GridLayout: # The Options to choose from
        cols:1
        size_hint: .8,.4
        spacing: 20
        pos_hint: {'center_x': .5, 'top': .5}

        Button:
            id: opt0
            text: 'Data Loaded:\n' + app.Data[0]
            on_release: app.CheckAns(self)
        Button:
            id: opt1
            text: 'Number of Questions Found in Data: '+str(app.nQuestions())
            on_release: app.CheckAns(self)
        Button:
            id: opt2
            text: 'Randomized Questions: ON'
            on_release: app.CheckAns(self)
        Button:
            id: opt3
            text: 'Score: +10 if Correct \n-1 For every Second you take to answer'
            on_release: app.CheckAns(self)